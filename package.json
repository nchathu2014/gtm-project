{
  "name": "la-gtm",
  "version": "0.0.2",
  "description": "logging and event pushing library for Google Tag Manager",
  "scripts": {
    "start": "cross-env NODE_ENV=development rollup --config rollup.config.js --watch",
    "build": "cross-env NODE_ENV=production rollup --config rollup.config.js",
    "lint": "tslint  --project tsconfig.json",
    "lint:format": "prettier --write \"**/*.ts\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nchathu2014/gtm-project.git"
  },
  "keywords": [
    "logging",
    "events",
    "gtm",
    "ga"
  ],
  "author": "",
  "private": true,
  "bugs": {
    "url": "https://github.com/nchathu2014/gtm-project/issues"
  },
  "homepage": "https://github.com/nchathu2014/gtm-project#readme",
  "devDependencies": {
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-angular": "^6.1.3",
    "@types/jest": "^22.2.3",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.22",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "rollup": "^0.58.2",
    "rollup-plugin-browsersync": "^0.2.6",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-fill-html": "^1.1.0",
    "rollup-plugin-typescript2": "^0.13.0",
    "rollup-plugin-uglify": "^3.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tsconfig-paths": "^3.3.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "moduleNameMapper": {
      "^@utils/(.*)": "<rootDir>/src/app/utils/$1",
      "^@providers/(.*)": "<rootDir>/src/app/providers/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,json,ts}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!src/**/*.spec.{js,ts}",
      "!e2e/**/*.(e2e-test|e2e-spec){js,json,ts}"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=8.9.1"
  }
}
